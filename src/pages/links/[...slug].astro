---
import '../../styles/global.css';
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export const prerender = true

export async function getStaticPaths() {
    console.log("getStaticPaths");
	const links = await getCollection("links")
    console.log("enlaces"+links);
	return links.map((link) => ({
		params: { slug: link.id },
		props: { link },
	}));
}

const { link } = Astro.props;

console.log("Enlace:"+link.data.id);
---
<Layout>
	
    <h1 class="text-xl font-bold text-white">Categoria enlace - { link.data.id }</h1>    
	{link.data.links.map((link) => 
		<h1 class="text-xl font-bold text-white">{link.name}</h1>
		<h1 class="text-xl font-bold text-white">{link.url}</h1>
		)}
	<div class="py-12 bg-black sm:py-16 lg:py-20">
		<div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
			<div class="flex items-center justify-between">
				<p class="text-xl font-bold text-gray-900">Sales</p>				
			</div>
	
			<div class="flex flex-col mt-4 lg:mt-8">
